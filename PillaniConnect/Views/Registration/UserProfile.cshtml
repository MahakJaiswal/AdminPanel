@model PilaniConnect.Models.Cls_Registration

@{
    ViewData["Title"] = "UserProfile";
    Layout = null;
}
<style>
    body {
        background-image: url("your-background-image.jpg");
        background-size: cover;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .profile-username {
        font-size: 24px;
        margin-top: 10px;
    }

    .text-muted {
        font-size: 14px;
    }

    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

        .btn-primary:hover {
            background-color: #2e59d9;
            border-color: #2e59d9;
        }

    .info-label {
        font-size: 16px;
        color: #555;
    }

    .info-value {
        font-size: 14px;
        color: #888;
    }

        .info-value a {
            color: #888;
        }

            .info-value a:hover {
                color: #555;
            }

    .social-icons {
        margin-top: 20px;
    }

        .social-icons a {
            display: inline-block;
            margin-right: 10px;
            color: #888;
            transition: color 0.3s;
        }

            .social-icons a:hover {
                color: #555;
            }
</style>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @if (Model._DetailsList != null && Model._DetailsList.Count > 0)
                {
                    @foreach (var item in Model._DetailsList)
                    {
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">User Profile</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <div class="text-center">
                                                <a data-gallery="photoviewer" data-group="a" href="@Html.DisplayFor(modelItem => item.photo)">
                                                    <img src="@Html.DisplayFor(modelItem => item.photo)" alt="" height="80" width="80" style="border-radius: 50%; object-fit: cover" />
                                                </a>
                                            </div>
                                            <h3 class="profile-username text-center">@Html.DisplayFor(modelItem => item.Name)</h3>
                                            <p class="text-muted text-center">@Html.DisplayFor(modelItem => item.description)</p>
                                            <a href="#" class="btn btn-primary btn-block"><b>Edit</b></a>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-map-marker-alt mr-1"></i> Location</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Address)</p>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-briefcase mr-1"></i> Designation</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Designation)</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-industry mr-1"></i> Industry</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Industry)</p>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-building mr-1"></i> Company</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Company)</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-phone-alt mr-1"></i> My Contact</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Contact1)</p>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-phone-alt mr-1"></i> Alternate Contact</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Contact2)</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-envelope mr-1"></i> Email</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Emailid)</p>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-map-marker-alt mr-1"></i> City</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.City)</p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="info-block">
                                                        <span class="info-label"><i class="fas fa-map-pin mr-1"></i> Pincode</span>
                                                        <p class="info-value small-text">@Html.DisplayFor(modelItem => item.Pincode)</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer social-icons">
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                    <a href="#"><i class="fab fa-facebook"></i></a>
                                    <a href="#"><i class="fab fa-linkedin"></i></a>
                                    <a href="#"><i class="fab fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
}
