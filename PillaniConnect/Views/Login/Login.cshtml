    <style>
        body {
            background-image: url('../Images/loginlogo.png');
            position: relative;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .card-body {
            background-color: #fff;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            flex-direction: column;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            border-radius: 0;
            border-color: #ccc;
            box-shadow: none;
        }

            .form-group input:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-login {
            background-color: #b3c6e6;
            color: white;
        }

            .btn-login:hover {
                background-color: #9db4d1;
                color: white;
            }

        footer {
            text-align: center;
            margin-top: 10px;
        }

        .badge {
            background-color: #c99a2e;
            color: #fff;
        }
    </style>
</head>
<body class="hold-transition login-page" style="background-color:#f1eedd">
    <div class="login-box">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "sign-wrapper mg-lg-l-50 mg-xl-l-60" }))
        {
            <div class="wd-100p">
                <p class="tx-color-03 tx-16 mg-b-19">Please sign in to continue.</p>

                <div class="form-group">
                    <label for="UserName">User Id</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "UserName", required = "required" })
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", required = "required", id = "Password" })
                </div>

                <p class="mb-1" style="margin-top: 15px">
                    <a href="/Login/ForgetPassword" style="color: #000">I forgot my password</a>
                    <a href="/Login/ChangePassword" style="margin-left: 75px; color: #000">Change Password ?</a>
                </p><br>

                <button class="btn btn-login btn-block" type="submit">Sign In</button>
            </div>
        }
    </div>

    <footer>
        <div>
            <strong class="badge">
                Copyright &copy; 2023
                <a href="http://www.convexiconindia.com/" target="_blank" style="color: #000">Convexicon</a>. All rights reserved.
            </strong>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.1.4/sweetalert2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js?v=3.2.0"></script>

    <script>
        $(function () {
            $("#toggle_pwd").click(function () {
                $(this).toggleClass("fa-eye fa-eye-slash");
                var type = $(this).hasClass("fa-eye-slash") ? "text" : "password";
                $("#Password").attr("type", type);
            });
        });

        $(document).ready(function () {
            var Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });

            var message = '@ViewBag.Message';

            if (message == "Login Successfully.") {
                Toast.fire({
                    icon: 'success',
                    title: 'Login Successfully.'
                });
            }
            else if (message == "Invalid username or password!! Please try again.") {
                Toast.fire({
                    icon: 'error',
                    title: '@ViewBag.Message'
                });
            }
        });
    </script>
</body>
</html>
